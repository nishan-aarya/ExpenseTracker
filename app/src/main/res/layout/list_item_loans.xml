<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/nameLinLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:fontFamily="@font/roboto_condensed_regular"/>

            <TextView
                android:id="@+id/txtLoanName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loan Name"
                android:fontFamily="@font/roboto_condensed_regular"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/initDateLinLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameLinLayout"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Initial date: "
                android:fontFamily="@font/roboto_condensed_regular"/>

            <TextView
                android:id="@+id/txtInitDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Initial date"
                android:fontFamily="@font/roboto_condensed_regular"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/roiLinLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/initDateLinLayout"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly ROI: "
                android:fontFamily="@font/roboto_condensed_regular"/>

            <TextView
                android:id="@+id/txtROI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ROI"
                android:fontFamily="@font/roboto_condensed_regular"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/monthlyPaymentLinLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/roiLinLayout"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly Payment: "
                android:fontFamily="@font/roboto_condensed_regular"/>

            <TextView
                android:id="@+id/txtMonthlyPayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment"
                android:fontFamily="@font/roboto_condensed_regular"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/amountLinLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/monthlyPaymentLinLayout"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loan Amount: "
                android:fontFamily="@font/roboto_condensed_regular"/>

            <TextView
                android:id="@+id/txtAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="amount"
                android:fontFamily="@font/roboto_condensed_regular"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/remainedAmountLinLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amountLinLayout"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remained Amount: "
                android:fontFamily="@font/roboto_condensed_regular"/>

            <TextView
                android:id="@+id/txtRemainedAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="remained amount"
                android:fontFamily="@font/roboto_condensed_regular"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/totalLossLinLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/remainedAmountLinLayout"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total expected Loss: "
                android:fontFamily="@font/roboto_condensed_regular"/>

            <TextView
                android:id="@+id/txtLossAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="loss amount"
                android:fontFamily="@font/roboto_condensed_regular"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/finishDateLinLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/totalLossLinLayout"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finish date: "
                android:fontFamily="@font/roboto_condensed_regular"/>

            <TextView
                android:id="@+id/txtFinishDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="finish date"
                android:fontFamily="@font/roboto_condensed_regular"/>

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>